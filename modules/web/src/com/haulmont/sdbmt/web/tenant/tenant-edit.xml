<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.sdbmt.web.tenant.TenantEdit"
        datasource="tenantDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.sdbmt.web.tenant">
    <dsContext>
        <datasource id="tenantDs"
                    class="com.haulmont.sdbmt.entity.Tenant"
                    view="tenant-edit"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="tenantDs">
            <column width="250px">
                <field id="name"/>
                <field id="tenantId"/>
                <field id="accessGroup">
                    <validator class="com.haulmont.sdbmt.web.tenant.TenantRootAccessGroupValidator"/>
                </field>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
